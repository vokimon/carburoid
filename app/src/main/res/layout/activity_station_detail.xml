<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:orientation="vertical">

        <!-- Hero Section -->
        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:text="Station Name" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:layout_marginBottom="4dp"
            >

            <!-- Warning for non-public prices -->
            <TextView
                android:id="@+id/text_exclusive_price_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?attr/colorError"
                android:text="@string/price_not_public"
                android:gravity="end"
                />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="2dp"
                style="@style/TextAppearance.Material3.DisplayLarge"
                android:textColor="?attr/colorError"
                android:textStyle="bold"
                android:text="1,529 €" />

            <TextView
                android:id="@+id/text_current_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:paddingBottom="14dp"
                app:layout_constraintEnd_toStartOf="@id/text_price"
                app:layout_constraintBottom_toBottomOf="@id/text_price"
                android:gravity="bottom|right"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorSecondary"
                android:text="Gasoleo A" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_gravity="end"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorPrimary"
            android:text="3,2 km" />

        <TextView
            android:id="@+id/text_open_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            style="@style/TextAppearance.Material3.LabelLarge"
            android:textColor="?attr/colorSecondary"
            android:text="Closes in 2 hours" />


        <!-- Location Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="@string/detail_location" />

        <LinearLayout
            android:id="@+id/layout_address_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location_on"
                android:contentDescription="@string/open_in_maps"
                android:layout_marginEnd="8dp"
                android:tint="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnBackground"
                    android:text="123 Example St." />

                <TextView
                    android:id="@+id/text_city_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorSecondary"
                    android:text="Sant Joan Despí, BARCELONA" />

            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_outward"
                android:contentDescription="@string/open_in_maps"
                android:layout_marginStart="8dp"
                android:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Hours Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="@string/detail_opening_hours" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_schedule"
                android:contentDescription="@string/open_in_maps"
                android:layout_marginEnd="8dp"
                android:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/text_opening_hours"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnBackground"
                android:text="L-V: 08:00-13:30 y 15:30-20:00; S: 08:00-13:30"/>

        </LinearLayout>

        <!-- Other Products Section -->
        <TextView
            android:id="@+id/label_other_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="@string/detail_other_products"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/container_other_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <!-- Here the dynamically added TextViews for other products -->
        </LinearLayout>

    </LinearLayout>
</ScrollView>
