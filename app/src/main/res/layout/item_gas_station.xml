<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <!-- Station Name -->
    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gas Station XYZ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price_distance_container"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Address -->
    <TextView
        android:id="@+id/text_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="123 Main St"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price_distance_container"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Optional: Location Text -->
    <TextView
        android:id="@+id/text_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Springfield, IL"
        android:textSize="13sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price_distance_container"
        app:layout_constraintTop_toBottomOf="@id/text_address"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Right-side Container for Price + Distance -->
    <LinearLayout
        android:id="@+id/price_distance_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Price -->
        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,529 â‚¬"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorError"
            android:layout_marginBottom="4dp" />

        <!-- Distance -->
        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,2 km"
            android:textSize="14sp"
            android:textColor="?attr/colorSecondary" />
    </LinearLayout>

    <!-- Separator -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOutline"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
